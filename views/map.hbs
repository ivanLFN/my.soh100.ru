<div id="map" style="width: 100%; height:650px"></div>

<script src="https://maps.api.2gis.ru/2.0/loader.js?pkg=full"></script>
<script type="text/javascript">

    const getCoords = async () => {
        const pos = await new Promise((resolve, reject) => {
            navigator.geolocation.getCurrentPosition(resolve, reject);
        });

        return {
            long: pos.coords.longitude,
            lat: pos.coords.latitude,
        };
    };

    var map;
    DG.then(async function () {

        let coords;
        try{
            coords = await getCoords();
        }catch(err){
            console.log(err)
        }
        
        console.log(coords)

        if (coords) {
            console.log("Location")
            map = DG.map('map', {
                center: [coords.lat, coords.long],
                zoom: 11
            });
        }
        else {
            map = DG.map('map', {
                center: [55.99, 92.87],
                zoom: 11
            });
        }

        const options = {
            method: 'GET',
            headers: { 'Content-Type': 'application/json' }
        }
        fetch('stations', options)
            .then(res => res.json())
            .then(stations => {

                for (let sta of stations) {
                    if (sta.hidden)
                        continue;
                    let status;
                    if (sta.onLink)
                        status = 'В сети';
                    else
                        status = 'Не в сети';

                    if (sta.estabState)
                        status = status + ' / занята';
                    else
                        status = status + ' / свободна';

                    const text = `<a href="station?num=${sta.stationNum}">№${sta.stationNum} <br> Europlug(3,5 kW) <br> ${status}</a>`;
                    DG.marker(sta.location).addTo(map).bindPopup(text);
                }
            });
    });

</script>